@model DeleteSongViewModel


<div class="text-white w-full flex items-center justify-center flex-col h-1/2">
    <div class="w-max flex flex-col gap-3">
        <h3 class="text-uppercase text-3xl font-bold">Are you sure you want to delete @Model.Title?</h3>
        
            <form asp-action="DeleteSong" class="w-full flex flex-col gap-2">
                <input type="hidden" asp-for="Id"/>
                <input type="submit" value="Delete" class="btn btn-danger w-full text-uppercase font-bold"/>
                <a asp-action="Index" class="btn bg-[#01FF95] text-black text-uppercase font-bold w-full">Back to songs</a>
            </form>
    </div>
    
</div>
