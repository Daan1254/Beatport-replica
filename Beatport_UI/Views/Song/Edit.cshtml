@model SongViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="container mx-auto flex flex-column mt-10">
    <div class="w-1/2 mx-auto">
        @if (ViewData["Error"] != null)
        {
            <span asp-validation-for="Bpm" class="text-danger">@ViewData["Error"]</span>
        }
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1 class="text-2xl font-bold">Upload</h1>
            <div class="mt-10  flex flex-col gap-2">

                <div class="mt-3">
                    <label for="Title" asp-for="Title" class="block text-sm/6 font-medium text-gray-900">Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <div class="mt-2">
                        <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset sm:max-w-md">
                            <input type="text" asp-for="Title" placeholder="Feel Alive" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm/6">
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <label asp-for="Genre" class="block text-sm/6 font-medium text-gray-900">Genre</label>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                    <div class="mt-2">
                        <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset sm:max-w-md">
                            <input type="text" asp-for="Genre" placeholder="Rawstyle" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm/6">
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <label asp-for="Genre" class="block text-sm/6 font-medium text-gray-900">Bpm</label>
                    <div class="mt-2">
                        <span asp-validation-for="Bpm" class="text-danger"></span>
                        <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset sm:max-w-md">
                            <input type="number" asp-for="Bpm" placeholder="160" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm/6">
                        </div>
                    </div>
                </div>
                
                <input type="submit" class="px-4 py-2 bg-[#9500FF] mt-10 rounded text-white" value="Edit"/>
            </div>
        </form>
    </div>
</div>





