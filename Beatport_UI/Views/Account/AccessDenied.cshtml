@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mx-auto mt-10 text-center">
    <h1 class="text-3xl text-white/80 font-bold mb-4">Access Denied</h1>
    <p class="text-white/60 mb-6">You do not have permission to access this resource.</p>
    <div class="flex justify-center gap-4">
        <a asp-controller="Home" asp-action="Index" class="btn bg-[#01FF95] border-none text-uppercase text-gray-800 font-bold">Go Home</a>
        <a asp-controller="Account" asp-action="Login" class="btn bg-[#FF006A] border-none text-uppercase text-white font-bold">Login</a>
    </div>
</div> 