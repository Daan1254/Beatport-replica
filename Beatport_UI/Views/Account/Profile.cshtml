@model Beatport_UI.Models.Account.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mx-auto mt-10">
    <div class="bg-[#1B1C1E] rounded-lg p-8 max-w-2xl mx-auto">
        <div class="flex items-center gap-6 mb-8">
            <!-- Profile Avatar -->
            <div class="w-24 h-24 bg-[#262626] rounded-full flex items-center justify-center">
                <span class="text-3xl text-white/80 font-bold">
                    @(Model.Email[0].ToString().ToUpper())
                </span>
            </div>
            
            <!-- Basic Info -->
            <div>
                <h1 class="text-2xl text-white/80 font-bold mb-2">@Model.Email</h1>
                <p class="text-white/60">Member since @Model.JoinDate.ToString("MMMM yyyy")</p>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-2 gap-4 mb-8">
            <div class="bg-[#262626] p-4 rounded-lg">
                <h3 class="text-white/60 text-sm mb-1">Total Songs</h3>
                <p class="text-2xl text-white/80 font-bold">@Model.TotalSongs</p>
            </div>
            <div class="bg-[#262626] p-4 rounded-lg">
                <h3 class="text-white/60 text-sm mb-1">Total Playlists</h3>
                <p class="text-2xl text-white/80 font-bold">@Model.TotalPlaylists</p>
            </div>
        </div>

        <!-- Account Actions -->
        <div class="space-y-4">
            <h2 class="text-xl text-white/80 font-bold mb-4">Account Settings</h2>
            
            <!-- Change Password Button -->
            <button class="w-full bg-[#262626] text-white/80 py-3 px-4 rounded-lg hover:bg-[#303030] transition-colors flex items-center justify-between">
                <span>Change Password</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
            </button>
            
            <!-- Delete Account Button -->
            <button class="w-full bg-red-600/10 text-red-500 py-3 px-4 rounded-lg hover:bg-red-600/20 transition-colors flex items-center justify-between">
                <span>Delete Account</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            </button>
        </div>
    </div>
</div> 