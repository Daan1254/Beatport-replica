@model RegisterUserDto
@{
    ViewData["Title"] = "Register";
}

<div class="container mx-auto flex flex-column mt-10">
    <div class="w-1/2 mx-auto">
        @if (ViewData["Error"] != null)
        {
            <span class="text-danger">@ViewData["Error"]</span>
        }
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1 class="text-2xl text-white/80 font-bold">Register</h1>
            <div class="mt-10 flex flex-col gap-2">
                <div class="mt-3">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-300">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="mt-2">
                        <div class="flex rounded-md shadow-sm ring-1 ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600 sm:max-w-md">
                            <input type="email" asp-for="Email" 
                                   class="block flex-1 border-0 bg-[#1B1C1E] rounded-md text-white/80 py-1.5 pl-1 focus:ring-0 sm:text-sm">
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-300">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="mt-2">
                        <div class="flex rounded-md shadow-sm ring-1 ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600 sm:max-w-md">
                            <input type="password" asp-for="Password"
                                   class="block flex-1 border-0 bg-[#1B1C1E] rounded-md text-white/80 py-1.5 pl-1 focus:ring-0 sm:text-sm">
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-300">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <div class="mt-2">
                        <div class="flex rounded-md shadow-sm ring-1 ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600 sm:max-w-md">
                            <input type="password" asp-for="ConfirmPassword"
                                   class="block flex-1 border-0 bg-[#1B1C1E] rounded-md text-white/80 py-1.5 pl-1 focus:ring-0 sm:text-sm">
                        </div>
                    </div>
                </div>

                <input type="submit" class="px-4 py-2 bg-[#FF006A] mt-10 rounded text-white" value="Register"/>
                
                <div class="mt-4 text-center text-white/80">
                    <p>Already have an account? <a asp-action="Login" class="text-[#FF006A]">Login here</a></p>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 