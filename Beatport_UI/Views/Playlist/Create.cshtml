@model Beatport_UI.Models.Playlist.PlaylistViewModel
@{
    ViewData["Title"] = "Create Playlist";
}

<div class="container mx-auto flex flex-column mt-10">
    <div class="w-full mx-auto">
        @if (ViewData["Error"] != null)
        {
            <span class="text-danger">@ViewData["Error"]</span>
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1 class="text-2xl font-bold text-white">Create Playlist</h1>
            <div class="mt-10 flex flex-col gap-2">
                <div class="mt-3">
                    <label asp-for="Title" class="block text-sm font-medium text-gray-300">Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <div class="mt-2">
                        <div class="flex rounded-md shadow-sm ring-1 ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600 sm:max-w-md">
                            <input type="text" asp-for="Title" placeholder="My Awesome Playlist"
                                   class="block flex-1 border-0 bg-[#1B1C1E] rounded-md text-white/80 placeholder-gray-500 py-1.5 pl-1 focus:ring-0 sm:text-sm">
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-300">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <div class="mt-2">
                        <div class="flex rounded-md shadow-sm ring-1 ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600 sm:max-w-md">
                            <textarea asp-for="Description" rows="3" placeholder="Describe your playlist"
                                    class="block flex-1 border-0 bg-[#1B1C1E] rounded-md text-white/80 placeholder-gray-500 py-1.5 pl-1 focus:ring-0 sm:text-sm"></textarea>
                        </div>
                    </div>
                </div>

                <div class="mt-10 flex gap-2">
                    <input type="submit" class="px-4 py-2 bg-[#FF006A] rounded text-white" value="Create"/>
                    <a asp-action="Index" class="px-4 py-2 bg-gray-600 rounded text-white">Back to playlists</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}